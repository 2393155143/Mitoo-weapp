.mit-button-wrap-small {
  display: inline-block;
}
.mit-button-wrap-default-size {
  display: inline-block;
  width: 50%;
}
.mit-button-wrap .mit-button {
  margin: 18rpx;
  font-size: 30rpx;
  line-height: 1.3;
  padding: 30rpx;
  border-radius: 6rpx;
}
.mit-button-wrap .mit-button-primary {
  background-color: #ff6b22;
  color: #fff;
}
.mit-button-wrap .mit-button-primary.mit-button-hover {
  background-color: #f26620;
}
.mit-button-wrap .mit-button-default {
  background-color: #fff;
  color: #000;
}
.mit-button-wrap .mit-button-default.mit-button-hover {
  background-color: #f2f2f2;
}
.mit-button-wrap .mit-button-small {
  display: inline-block;
  padding: 18rpx 36rpx;
}
.mit-button-wrap .mit-button-circle {
  border-radius: 100rpx;
}
.mit-button-wrap .mit-button-disabled {
  opacity: 0.3;
}
.mit-button-wrap-full .mit-button {
  margin: 0;
  border-radius: 0;
  border: 0;
}
.mit-button-wrap-bottom {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  background-color: #fff;
  box-shadow: 1rpx 0rpx 3rpx #eee;
  border-top: 1rpx solid #dddeee;
}
@media (min-resolution: 2dppx) {
  .mit-button-wrap-bottom {
    border-top: none;
  }
  .mit-button-wrap-bottom::before {
    content: '';
    position: absolute;
    background-color: #dddeee;
    display: block;
    z-index: 1;
    top: 0;
    right: auto;
    bottom: auto;
    left: 0;
    width: 100%;
    height: 1rpx;
    transform-origin: 50% 50%;
    transform: scaleY(0.5);
  }
}
.mit-button-wrap-bottom .mit-botton {
  margin: 18rpx;
  border-radius: 0;
  border: 0;
}
@media (min-resolution: 2dppx) and (min-resolution: 3dppx) {
  .mit-button-wrap-bottom::before {
    transform: scaleY(0.33);
  }
}
