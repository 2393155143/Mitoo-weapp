page {
  background-color: #f7f7f7;
}
.mit-card {
  font-size: 32rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #dddee1;
  background-color: #fff;
}
.mit-card-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #dddee1;
}
.mit-card-body {
  padding: 20rpx;
}
.mit-card-footer {
  font-size: 28rpx;
  color: #80848f;
}
.mit-card.mit-card-full {
  margin: 0;
  border-radius: 0;
  border-left: none;
  border-right: none;
}
