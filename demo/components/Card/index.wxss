.mit-card {
  color: #333;
  position: relative;
  font-size: 28rpx;
  margin: 18rpx;
  padding: 0 24rpx;
  background-color: #fff;
}
.mit-card-header {
  position: relative;
  padding: 24rpx 0;
  font-size: 36rpx;
  font-weight: 500;
  border-bottom: 1rpx solid #dddeee;
}
@media (min-resolution: 2dppx) {
  .mit-card-header {
    border-bottom: none;
  }
  .mit-card-header::after {
    content: '';
    position: absolute;
    background-color: #dddeee;
    display: block;
    z-index: 2000;
    top: auto;
    right: auto;
    bottom: 0;
    left: 0;
    width: 100%;
    height: 1rpx;
    transform-origin: 50% 100%;
    transform: scaleY(0.5);
  }
}
@media (min-resolution: 2dppx) and (min-resolution: 3dppx) {
  .mit-card-header::after {
    transform: scaleY(0.33);
  }
}
.mit-card-body {
  padding: 24rpx 0;
}
.mit-card .mit-card-footer {
  font-size: 24rpx;
  color: #666;
}
.mit-card.mit-card-full {
  margin: 0;
  border-radius: 0;
}
