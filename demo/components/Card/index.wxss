.hairline() {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  width: 200%;
  height: 200%;
  transform: scale(0.5);
  transform-origin: 0 0;
  pointer-events: none;
  box-sizing: border-box;
  border: 0 solid #dddeee;
}
page {
  background-color: #fff;
}
.mit-card {
  font-size: 32rpx;
  margin: 20rpx;
  border-radius: 10rpx;
  border: 1rpx solid #dddeee;
  background-color: #fff;
}
.mit-card-header {
  padding: 20rpx;
  border-bottom: 1rpx solid #dddeee;
}
.mit-card-body {
  padding: 20rpx;
}
.mit-card-footer {
  font-size: 28rpx;
  color: #80848f;
}
.mit-card.mit-card-full {
  margin: 0;
  border-radius: 0;
  border-left: none;
  border-right: none;
}
