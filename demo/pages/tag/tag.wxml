<view>
  <mit-panel noBackground title="基本用法">
    <view style="padding: 0 30rpx;">
      <mit-tag>标签一</mit-tag>
    </view>
  </mit-panel>
  <mit-panel noBackground title="边框颜色">
    <view style="padding: 0 30rpx;">
      <mit-tag borderColor="#EC0D33">标签一</mit-tag>
      <mit-tag style="margin-left:10rpx" borderColor="#FFC70A">标签二</mit-tag>
      <mit-tag style="margin-left:10rpx" borderColor="#1B9CFF">标签三</mit-tag>
    </view>
  </mit-panel>
  <mit-panel noBackground title="各种颜色">
    <view style="padding: 0 30rpx;">
      <mit-tag backgroundColor="#EC0D33" borderColor="#fff">标签一</mit-tag>
      <mit-tag style="margin-left:10rpx" borderColor="#fff" backgroundColor="#FFC70A">标签二</mit-tag>
      <mit-tag style="margin-left:10rpx" borderColor="#fff" backgroundColor="#3F63C6">标签三</mit-tag>
    </view>
  </mit-panel>
  <mit-panel noBackground title="反馈">
    <view style="padding: 0 30rpx;">
      <mit-tag selectable bind:select="select" borderColor="#fff" data-index="标签一" backgroundColor="#FFC70A">标签一</mit-tag>
      <mit-tag selectable bind:select="select" borderColor="#fff" data-index="标签二" style="margin-left:10rpx" backgroundColor="#EC0D33">标签二</mit-tag>
      <mit-tag selectable bind:select="select" borderColor="#fff" data-index="标签三" style="margin-left:10rpx" backgroundColor="#1B9CFF">标签三</mit-tag>
    </view>
  </mit-panel>
  <mit-panel noBackground title="自定义大小标签">
    <view style="padding: 0 30rpx;">
      <mit-tag size="{{18}}" selectable borderColor="#fff"  backgroundColor="#FFC70A">标签一</mit-tag>
      <mit-tag size="{{21}}" selectable borderColor="#fff"  style="margin-left:10rpx" backgroundColor="#EC0D33">标签二</mit-tag>
      <mit-tag size="{{24}}" selectable borderColor="#fff"  style="margin-left:10rpx" backgroundColor="#1B9CFF">标签三</mit-tag>
    </view>
  </mit-panel>
  <mit-toast id="toast"/>
</view>
