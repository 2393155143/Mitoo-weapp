.mit-progress{display:flex;justify-content:flex-start;font-size:28rpx;margin:18rpx;align-items:center}.mit-progress-wrap{position:relative;flex:9;height:15rpx;border-radius:15rpx;background-color:#ccc;overflow:hidden}.mit-progress-inner,.mit-progress-inner-flow{position:absolute;width:100%;height:100%;border-radius:15rpx}.mit-progress-inner{left:0;background-color:#ff6b22;transition:width .2s ease;overflow:hidden}.mit-progress-inner-flow{background-color:rgba(255,255,255,.4);animation-name:flow;animation-duration:3s;animation-delay:0s;animation-iteration-count:infinite;animation-fill-mode:both;transition-timing-function:ease}@keyframes flow{0%{transform:translateX(-100%)}100%{transform:translateX(0)}}.mit-progress-progress{flex:1;font-size:28rpx;line-height:28rpx;padding-left:18rpx}