@import "../styles/index";


.{$prefix}-panel {
  font-size: $font-size-base;
  &-title {
    font-size: $font-size-heading;
    padding: $padding-x-large;
    line-height: $line-height-paragraph;
  }
  &-info {
    background-color: $background-color-base;
    position: relative;
    hairline('bottom');
    hairline('top');
    &&-without-border {
        hairline-remove('all');
    }
  }
}
