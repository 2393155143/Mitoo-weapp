@import "../theme/default";

scale-hairline-common(color, top, right, bottom, left) {
  content: '';
  position: absolute;
  background-color: color;
  display: block;
  z-index: 1;
  top: top;
  right: right;
  bottom: bottom;
  left: left;
}

hairline(direction='all', color = $border-color-base, radius = 0){

    if direction == 'top' {

        border-top: 1rpx solid color;

        @media (min-resolution: 2dppx) {
          border-top: none;

          &::before {
            scale-hairline-common($border-color-base, 0, auto, auto, 0);
            width: 100%;
            height: 1rpx;
            transform-origin: 50% 50%;
            transform: scaleY(0.5);

            @media (min-resolution: 3dppx) {
              transform: scaleY(0.33);
            }
          }
        }
    }
    else if direction == 'bottom' {

        border-bottom: 1rpx solid color;

        @media (min-resolution: 2dppx) {
          border-bottom: none;

          &::before {
            scale-hairline-common($border-color-base, auto, auto, 0, 0);
            width: 100%;
            height: 1rpx;
            transform-origin: 50% 100%;
            transform: scaleY(0.5);

            @media (min-resolution: 3dppx) {
              transform: scaleY(0.33);
            }
          }
        }
    }
    else if direction == 'left' {

        border-left: 1rpx solid color;

        @media (min-resolution: 2dppx) {
          border-left: none;

          &::before {
            scale-hairline-common($border-color-base, 0, auto, auto, 0);
            width: 100%;
            height: 1rpx;
            transform-origin: 100% 50%;
            transform: scaleY(0.5);

            @media (min-resolution: 3dppx) {
              transform: scaleY(0.33);
            }
          }
        }
    }
    else if direction == 'right' {

        border-right: 1rpx solid color;

        @media (min-resolution: 2dppx) {
          border-right: none;

          &::before {
            scale-hairline-common($border-color-base, 0, 0, auto, auto);
            width: 100%;
            height: 1rpx;
            transform-origin: 100% 50%;
            transform: scaleY(0.5);

            @media (min-resolution: 3dppx) {
              transform: scaleY(0.33);
            }
          }
        }
    }
    else{

        border: 1rpx solid color;
        border-radius: radius;

        @media (min-resolution: 2dppx) {

            content: '';
            position: absolute;
            left: 0;
            top: 0;
            width: 200%;
            height: 200%;
            border: 1rpx solid color;
            border-radius: radius * 2;
            transform-origin: 0 0;
            transform: scale(0.5);
            box-sizing: border-box;
            pointer-events: none;

        }

    }
}

hairline-remove(position) {
    if position == 'left' {
        border-left: 0;
        &:before {
            display: none !important;
        }
    }
    else if position == 'right' {
        border-right: 0;
        &:after {
            display: none !important;
        }
    }
    else if position == 'top' {
        border-top: 0;
        &:before {
            display: none !important;
        }
    }
    else if position == 'bottom' {
        border-bottom: 0;
        &:after {
            display: none !important;
        }
    }
    else {
        border: 0;
        &:before {
            display: none !important;
        }
    }
}
