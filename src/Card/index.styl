@import "../styles/index";


.{$prefix}-card {
  position: relative;
  font-size: $size-font-base;
  margin: $margin-base;
  hairline('all', $border-color-base, $border-radius-sm);

  background-color: $card-bg;
  &-header {
    position: relative;
    padding: $padding-base;
    hairline('bottom');
  }
  &-body {
    padding: $padding-base;
  }
  &-footer {
    font-size: $size-font-small;
    color: $subsidiary-color;
  }
  &&-full {
    margin: 0;
    border-radius: 0;
    hairline-remove('left');
    hairline-remove('right');
  }
}
