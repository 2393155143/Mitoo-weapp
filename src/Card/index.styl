@import "../styles/index";
page {
  background-color: $background-color-base;
}
.{$prefix}-card {
  font-size: $size-font-base;
  margin: $margin-base;
  // border-radius: $card-border-radius;
  position: relative;
  // border: $card-border-width solid $border-color-base;
  hairline('all')
  background-color: $card-bg;
  &-header {
    padding: $padding-base;
    border-bottom: $card-border-width solid $border-color-base;
  }
  &-body {
    padding: $padding-base;
  }
  &-footer {
    font-size: $size-font-small;
    color: $subsidiary-color;
  }
  &&-full {
    margin: 0;
    border-radius: 0;
    border-left: none;
    border-right: none;
  }
}
