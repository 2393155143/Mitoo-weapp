@import "../styles/index";
@import "../styles/mixins/hairline.styl";


.{$prefix}-tabs {
  position: relative;
  background-color: $background-color-base;
  display: flex;
  box-pack: justify;
  hairline('bottom')
  padding: $padding-base;
  white-space: nowrap;
  overflow-x: hidden;
  &-scroll {
    overflow-x: scroll;

    &::-webkit-scrollbar {
      width: 0;
      height: 0;
    }
  }
}
