@import "../styles/index";

$gridPrefixCls = $prefix + '-grid';
$flexPrefixCls = $prefix + '-flexbox';

.{$gridPrefixCls} {
	.{$flexPrefixCls} {
		background: $background-color-base;
	}

	&.{$gridPrefixCls}-line {
		position: relative;

		.{$flexPrefixCls} {
			position: relative;
			hairline('bottom');

			.{$flexPrefixCls}-item {
				position: relative;
				&:first-child {
					hairline('left');
				}
				&:not(:last-child) {
					hairline('right');
				}
			}
		}

	}

}
