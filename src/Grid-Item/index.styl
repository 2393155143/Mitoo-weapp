@import "../styles/index";

$gridPrefixCls = $prefix + '-grid';
$flexPrefixCls = $prefix + '-flexbox';

.{$flexPrefixCls}-item{
	margin-left: 0;
	float: left;
	background: $background-color-base;

	&:active{
		background-color: $background-color-tap;
	}

	&.{$gridPrefixCls}-item{
		position: relative;
		hairline('right')
		hairline('bottom')
	}

	&.{$gridPrefixCls}-item-active{
		.{$gridPrefixCls}-item-content {
			background-color: $background-color-tap;
		}
	}

	.{$gridPrefixCls}-item-content{
		text-align: center;
		width: 100%;
		height: 100%;
		// padding: $v-spacing-lg 0;

		.{$gridPrefixCls}-item-inner-content {
			display: flex;
			flex-direction: column;
			justify-content: center;
			align-items: center;

			.{$gridPrefixCls}-icon{
				max-width: 100%;
			}

			.{$gridPrefixCls}-text {
				margin-top: $v-spacing-md;
				font-size: $font-size-sm;
				color: $color-text-base;
				text-align: center;
			}

			&.column-num-3 {
				.{$gridPrefixCls}-text {
					font-size: $size-font-base;
				}
			}

			&.column-num-2 {
				.{$gridPrefixCls}-text {
					margin-top: $v-spacing-lg;
					font-size: $font-size-base;
				}
			}
		}
	}
}

.{$gridPrefixCls}-item {
	&:before {
		display: block;
		content: '';
		padding-bottom: 100%;
	}
	.{$gridPrefixCls}-item-content {
		position: absolute;
		top: 50%;
		transform: translateY(-50%);
	}
	.{$gridPrefixCls}-item-inner-content {
		height: 100%;
		.{$gridPrefixCls}-icon {
			margin-top: $v-spacing-md;
			width: 28%!important;
		}
	}
}

.{$gridPrefixCls} {
	.{$flexPrefixCls} {
		background: $background-color-base;
	}

	&.{$gridPrefixCls}-line {
		position: relative;
		&:not(.{$gridPrefixCls}-carousel) {
			hairline('top');
			hairline('right');
		}

		.{$flexPrefixCls} {
			position: relative;
			hairline('bottom');

			.{$flexPrefixCls}-item {
				position: relative;
				&:first-child {
					hairline('left');
				}
				&:not(:last-child) {
					hairline('right');
				}
			}
		}

		&.{$gridPrefixCls}-carousel {
			.{$gridPrefixCls}-carousel-page {
				hairline('top');
				hairline('right');
			}
		}
	}

	&.{$gridPrefixCls}-square {
		.{$gridPrefixCls}-item {
			&:before {
				display: block;
				content: '  ';
				padding-bottom: 100%;
			}
			.{$gridPrefixCls}-item-content {
				position: absolute;
				top: 50%;
				transform: translateY(-50%);
			}
			.{$gridPrefixCls}-item-inner-content {
				height: 100%;
				.{$gridPrefixCls}-icon {
					margin-top: $v-spacing-md;
					width: 28%!important;
				}
			}
		}
	}

}
