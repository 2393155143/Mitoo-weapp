<wxs module="parser">
module.exports = {
    getBackgroundCls: function(warning, error, success) {
        if (warning) {
            return 'mit-alert-warning'
        }
        else if (error) {
            return 'mit-alert-error'
        }
        else if (success) {
            return 'mit-alert-success'
        }
        else {
            return ''
        }
    }
}
