@import "../styles/index";

.{$prefix}-alert {
    position: relative;
    margin: $margin-x-large;
    border-radius: $alert-border-radius;
    font-size: $font-size-heading;
    color: $background-color-base;
    background-color: $brand-color-primary;
    padding: $padding-x-large;
    &-warning {
        background-color: $brand-color-warning;
    }
    &-error {
        background-color: $brand-color-error;
    }
    &-success {
        background-color: $brand-color-success;
    }
    &-close {
        position: absolute;
        line-height: $font-size-base;
        right: $padding-base;
        top: 50%;
        margin-top: - ($font-size-base/ 2);
    }
}
