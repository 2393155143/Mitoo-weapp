@import "../styles/index";
@import "../styles/mixins/hairline.styl";

$prefixCls = $prefix + '-checkbox'

.{$prefixCls}-cell{
    display: flex;
    padding: $padding-x-large;
    // margin: 0 $margin-x-large;
    position: relative;
    hairline('bottom');

    &:active{
        background-color: $background-color-tap;
    }
    &-last{
        hairline-remove('bottom');
    }
}

.{$prefixCls}-item{

	display: flex;
	flex-direction: row;
	justify-content: space-between;
	flex: 1;
	padding-right: 10rpx;

	&-left{
		display: flex;
		justify-content: flex-start;
		flex-direction: row;
		align-items: center;

		&-extra{
			font-size: 30rpx;
			margin-right: 30rpx;

			.checked{
				color: $brand-color-primary;
			}
			.uncheck{
				color: $color-text-disabled;
			}

			.disabled{
				color: $color-text-disabled;
			}
		}

		&-title{
			line-height: 1.5;
			width: auto;
		}
	}

}
