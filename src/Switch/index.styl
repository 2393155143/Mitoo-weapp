@import "../styles/index";
@import "../styles/mixins/hairline.styl";


.{$prefix}-switch {
  position: relative;
  border-radius: $switch-size-base;
  width: $switch-size-base * 2;
  height: $switch-size-base;
  background-color: $background-color-tap;
  transition: all $transition-time ease-in-out;
  &-hidden {
    visibility: hidden;
  }
  &-disabled {
    .{$prefix}-switch-inner {
      background-color: $background-color-body;
    }
  }
  &-large {
    width: $switch-size-large * 2;
    height: $switch-size-large;
    .{$prefix}-switch-inner {
      width: $switch-size-large - 4rpx;
      height: $switch-size-large - 4rpx;
    }
    &.{$prefix}-switch-on {
      .{$prefix}-switch-inner {
        transform: translateX($switch-size-large);
      }
    }
  }
  &-inner {
    position: absolute;
    border-radius: 100%;
    width: $switch-size-base - 4rpx;
    height: $switch-size-base - 4rpx;
    margin: 2rpx;
    background-color: $background-color-base;
  }
  &-off {
    .{$prefix}-switch-inner {
      transition: all $transition-time ease-in-out;
      left: 0;
    }
  }
  &-on {
    background-color: $brand-color-primary;
    transition: all $transition-time ease-in-out;
    .{$prefix}-switch-inner {
      transition: all $transition-time ease-in-out;
      transform: translateX($switch-size-base);
    }
  }
}
